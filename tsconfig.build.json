{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "inlineSources": true,
    "noEmit": false,
    "outDir": "dist/types",
    "rootDir": "src",
    "sourceMap": true
  },
  "include": ["./lib/**/*.ts"],
  "exclude": [
    "./lib/**/__fixtures__/**/*",
    "./lib/**/__mocks__/**/*",
    "./lib/**/__test__/**/*",
    "./lib/**/__tests__/**/*",
    "./lib/**/__snapshots__/**/*",
    "./lib/**/*.test.ts",
    "./lib/**/*.test-d.ts",
    "./lib/**/*.test.*.ts"
  ]
}
